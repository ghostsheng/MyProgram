<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<com.facebook.drawee.view.SimpleDraweeView
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:id="@+id/home_item_img"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="这是商品名称"
        android:layout_toRightOf="@id/home_item_img"
        android:layout_alignTop="@id/home_item_img"
        android:id="@+id/home_item_title"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#f00"
        android:text="价格"
        android:layout_alignBottom="@id/home_item_img"
        android:layout_toRightOf="@id/home_item_img"
        android:id="@+id/home_item_price"/>
</RelativeLayout>
